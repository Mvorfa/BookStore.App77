@model List<Car>

<h1>All my cars</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>

            <th scope="col">Model Name</th>
            <th scope="col">Company Name</th>
            <th scope="col">Photo</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var car in Model)
        {
            <tr>
                <th scope="row">@car.Id</th>
                <td>@car.ModelName</td>
                <td>@car.CompanyName</td>
                <td>
                    <img src="@Url.Content(car.URLimg)" width="50"/>
                </td>
                <td>
                    <a asp-controller="Car"
                       asp-action="Modify"
                       asp-route-id="@car.Id"
                       class="btn btn-primary">
                        Modify
                    </a>
                    <a 
                        asp-controller="Car" 
                        asp-action="Details" 
                        asp-route-id="@car.Id"
                        class="btn btn-primary">
                        Show details
                    </a>
                    <a asp-controller="Car"
                       asp-action="Delete"
                       asp-route-id="@car.Id"
                       class=" btn btn-danger">
                        Delete
                    </a>
                </td>
               
               
               
            </tr>
        }
    </tbody>
</table